            %span.caret
          %ul.dropdown-menu
            %li
              %a{:href => calendar_path} Calendar
            %li
              %a{:href => current_hackathon_path} HackAThon
            %li
              %a{:href => faq_path(@faq)} HackAThon FAQ
            %li
              %a{:href => hackathon_teams_path(@hackathon)} Approved teams
