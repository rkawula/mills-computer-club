%body
  .container
    .row
      .box
        .col-lg-12
          %hr
            %h2.intro-text.text-center
              %strong= @user.name
          %hr
          - if current_user && current_user.id == @user.id
            = form_tag edit_profile_path(@user), :method => :post do
              =render :partial => 'user_form'
              = submit_tag 'Save Changes'
          - else
            %p= @user.profile
