    / /.container
    %footer
      .container
        .row
          .col-lg-12.text-center
            %p Copyright &copy; Your Website 2014
    / jQuery
    %script{:src => "js/jquery.js"}
    / Bootstrap Core JavaScript
    %script{:src => "js/bootstrap.min.js"}
    / Script to Activate the Carousel
    :javascript
      $('.carousel').carousel({
          interval: 5000 //changes the speed
      })